<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @stories.nil? %>
      <h2> Oooopsss... no story been published </h2>
      <small>P.S: you can be the first story every one read here</small>
    <% else %>
        <% @stories.each do |story| %>
          <div class="panel panel-default">
            <div class="panel panel-header">
              <%= link_to content_tag(:h2, story.title), story %>
            </div>
            <div class="panel panel-body">
              <p><%= story.subtitle %></p>
              <br />
              <%= truncate(story.content, :length => 250) %>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
