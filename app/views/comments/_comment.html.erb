<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <blockquote>
      <p>
        <%= comment.content %>
      </p>
      <small>
        by <cite><%= comment.user.fullname << ", " <<
        time_ago_in_words(comment.created_at) %> ago</cite>
      </small>
    </blockquote>
  </div>
</div>
<% if is_editable(comment) %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "", story_comment_path(@story, comment),
        method: :patch,
        class: "btn btn-sm btn-info fa fa-pencil-square-o" %>
      <%= link_to "", story_comment_path(@story, comment),
        method: :delete,
        data: {confirm: "Are you sure to delete this comment ?"},
        class: "btn btn-danger btn-sm fa fa-trash" %>
    </div>
  </div>
<% end %>
