<div class="page-header text-center">
  <h1><%= local_assigns[:form_title] %></h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for @story do |f| %>
        <%= render partial: 'shared/error_messages', locals: {mdl:@story } %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class:"form-control", placeholder:"teasing name for your story" %>
        </div>

        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class:"form-control", placeholder:"inviting one liner summary" %>
        </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, cols: "25", rows: "5", class:"form-control", placeholder:"and the story goes here" %>
        </div>

        <div class="form-group">
          <%= f.label :tags %>
          <%= f.text_field :tags, class:"form-control",
          placeholder:"at least a tag, tag start with # (#yourTag), max 6 tags" %>
        </div>

        <div class="form-group">
          <a href="<%= root_path %>" class="btn btn-warning btn-lg">Cancel</a>
          <%= f.submit local_assigns[:submit_text], class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
  </div>
</div>
